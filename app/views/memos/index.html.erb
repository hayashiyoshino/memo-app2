<div class="container">
  <div class="row">

      <div class="row">
        <div class="input-field col s6">
          <%= form_for @memo, remote: true do |f| %>
            <%= f.text_field :text, placeholder: 'メモを入力してね' %>
            <%= f.submit '投稿', class:'waves-effect waves-light btn' %>
          <% end %>
            <ul>
               <%= render @memos %>
            </ul>
        </div>
      </div>

  </div>
</div>


